import tkinter as tk  # Use lowercase 'tkinter' for Python 3

def sel():
    selection = "Value = " + str(var.get())
    label.config(text=selection)

# Create the main window
root = tk.Tk()

# Create a DoubleVar to hold the scale value
var = tk.DoubleVar()

# Create a Scale widget
scale = tk.Scale(root, variable=var, from_=0, to=100, orient="horizontal")
scale.pack(anchor=tk.CENTER)

# Create a Button to trigger the scale value
button = tk.Button(root, text="Get Scale Value", command=sel)
button.pack(anchor=tk.CENTER)

# Create a Label to display the selected scale value
label = tk.Label(root)
label.pack()

# Run the main event loop
root.mainloop()
