import sys

randomList = ['a', 0, 2]

for entry in randomList:
    try:
        print("The entry is", entry)
        r = 1 / int(entry)  # Attempt to calculate the reciprocal
    except ZeroDivisionError:
        print("Oops! Division by zero occurred.")
        r = None  # Handle division by zero by setting r to None
    except ValueError:
        print("Oops! Invalid value for conversion to integer:", entry)
        r = None  # Handle non-integer entries
    except Exception as e:
        print("Oops!", sys.exc_info()[0], "occurred.")
        r = None  # General exception handling for unexpected errors

    if r is not None:
        print("The reciprocal of", entry, "is", r)
    else:
        print("Reciprocal could not be computed.")

    print("Next entry.\n")
