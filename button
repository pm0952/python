import tkinter as tk  # Use lowercase 'tkinter' for Python 3
from tkinter import messagebox  # Use tkinter.messagebox for message boxes

# Create the main window
top = tk.Tk()

# Callback function for the button
def helloCallBack():
    messagebox.showinfo("Hello Python", "Hello World")

# Create a button and bind it to the callback function
B = tk.Button(top, text="Hello", command=helloCallBack)

# Pack the button into the window
B.pack()

# Run the main event loop
top.mainloop()
