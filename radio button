import tkinter as tk  # Use lowercase 'tkinter' for Python 3

def sel():
    selection = "You selected the option " + str(var.get())
    label.config(text=selection)

# Create the main window
root = tk.Tk()

# Create an IntVar to hold the value of the selected radio button
var = tk.IntVar()

# Create Radio buttons
R1 = tk.Radiobutton(root, text="Option 1", variable=var, value=1, command=sel)
R1.pack(anchor=tk.W)

R2 = tk.Radiobutton(root, text="Option 2", variable=var, value=2, command=sel)
R2.pack(anchor=tk.W)

R3 = tk.Radiobutton(root, text="Option 3", variable=var, value=3, command=sel)
R3.pack(anchor=tk.W)

# Create a label to display the selected option
label = tk.Label(root)
label.pack()

# Run the main event loop
root.mainloop()
